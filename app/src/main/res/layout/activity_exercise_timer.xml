    <ImageView
        android:id="@+id/exercise_img"
        android:layout_width="wrap_content"
        android:layout_height="235dp"
        android:layout_marginTop="-20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/flexibility" />

    <TextView
        android:id="@+id/exc_title"
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:layout_margin="35dp"
        android:fontFamily="@font/nunitosans_bold"
        android:gravity="center"
        android:text="Stretching"
        android:textColor="@color/black"
        android:textSize="46dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/exercise_img" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:fontFamily="@font/nunitosans_bold"
        android:gravity="center"
        android:textSize="75sp"
        android:letterSpacing="0.02"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="55dp"
        app:layout_constraintTop_toBottomOf="@id/exc_title"
        />
    <TextView
        android:id="@+id/min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Minutes"
        android:fontFamily="@font/nunitosans_bold"
        android:gravity="center"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_margin="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@id/timer"
        />

    <Button
        android:id="@+id/exitBtn"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="129dp"
        android:layout_height="51dp"
        android:layout_margin="14dp"
        android:background="@drawable/btn_blue"
        android:fontFamily="@font/nunitosans_bold"
        android:gravity="center_horizontal|top"
        android:text="Exit"
        android:textAllCaps="false"
        android:textSize="17sp"
        app:cornerRadius="500dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>